  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "checkJs": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true, // Opcional para compatibilidad ESM
    "resolveJsonModule": true // Si trabajas con archivos JSON
  }
}
